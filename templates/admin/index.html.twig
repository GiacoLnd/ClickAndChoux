{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
    <section id="admin-profile">
        <div class="text-center">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
        <div class="flex-column-center">
            <h2 class="page-title">Panneau Administrateur</h2>
            <p>Bonjour, cheffe {{ user.nickName }} !</p>
            <p>Email Admin : {{ user.email }}</p>
            <div class="flex-row-center">
                <a href="{{ path('admin_list_user') }}" class="bubblegum-link">Liste des utilisateurs</a>
                <a href="{{ path('admin_list_commandes') }}" class="bubblegum-link">Liste des Commandes</a>
            </div>
            <div class="flex-row-center">
            <a href="{{ path('admin_add_product') }}" class="bubblegum-link">Ajouter un produit</a>
            <a href="{{ path('admin_delete_product') }}" class="bubblegum-link">Supprimer un ou plusieurs produit(s)</a>
            </div>
        </div>
    </section>
{% endblock %}
 