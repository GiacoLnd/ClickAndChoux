{% extends 'base.html.twig' %}

{% block title %}Liste des commandes{% endblock %}

{% block body %}
    <section id="admin-list-order">
        <h2 class="page-title">Liste des Commandes :</h2>

        <h2>Les Nouvelles Commandes (En préparation)</h2>
        <table class="dataTable">
            <thead>
                <tr>
                    <th>N° Commande</th>
                    <th>Client</th>
                    <th>Date</th>
                    <th>Montant Total</th>
                    <th>Statut</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for commande in nouvellesCommandes %}
                    <tr>
                        <td>{{ commande.reference }}</td>
                        {% if commande.user %}
                            <td>{{ commande.user.nickName }}</td>
                        {% else %}
                            <td>Client anonymisé suite suppression de compte</td>
                        {% endif %}
                        <td>{{ commande.dateCommande|date('d/m/Y H:i') }}</td>
                        <td>{{ commande.montantTotal }}€</td>
                        <td>
                            <span class="badge bg-danger">{{ commande.statut }}</span>
                        </td>
                        <td><a href="{{ path('commande_detail', { slug: commande.slug }) }}" class="bubblegum-link">Voir</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <h2>Commandes En Livraison</h2>
