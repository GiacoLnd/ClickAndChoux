{% extends 'base.html.twig' %}

{% block title %}Liste des commandes{% endblock %}

{% block body %}
    <section id="admin-user-order">
        <h2 class="page-title">Commande de {{ user.nickName }} :</h2>
        {% if commandes is empty %}
            <p>Aucune commande passée pour le moment.</p>
            <div class="flex-column-center">
                <a class="bubblegum-link" href="{{ path('admin_list_user') }}">Retour</a>
            </div>
        {% else %}
            <table id="table">
                <thead>
                    <tr>
                        <th>N° Commande</th>
                        <th>Date de commande</th>
                        <th>Date de paiement</th>
                        <th>Date de livraison</th>
                        <th>Montant Total</th>
                        <th>Statut de la commande</th>
                        <th>Statut du paiement</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for commande in commandes %}
                        <tr>
                            <td>{{ commande.reference }}</td>
                            <td>{{ commande.dateCommande|date('d/m/Y H:i') }}</td>
                            <td>{{ commande.datePaiement|date('d/m/Y H:i') }}</td>
                            <td>{{ commande.dateLivraison|date('d/m/Y H:i') }}</td>
                            <td>{{ commande.montantTotal }}€</td>
                            <td>
                            {% if commande.statut == 'confirmée' %}
                                <span class="badge bg-success">Confirmée</span>
                            {% else %}
                                <span class="badge bg-warning">{{ commande.statut }}</span>
                            {% endif %}
                            </td>
                            <td>
                            {% if commande.statutPaiement == 'payé' %}
                                <span class="badge bg-success">Payée</span>
                            {% else %}
                                <span class="badge bg-alert">{{ commande.statut }}</span>
                            {% endif %}
                            </td>
                            <td><a href="{{ path('commande_detail', { 'slug': commande.slug }) }}" class="bubblegum-link">Voir</a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            <div class="flex-column-center">
                <a class="bubblegum-link" href="{{ path('admin_list_user') }}">Retour</a>
            </div>
        {% endif %}
    </section>
{% endblock %}
 