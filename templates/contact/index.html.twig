{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <section id="contact-form">
        <h2 class="page-title">Contactez-nous</h2>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('danger') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

            {{ form_start(form) }}

        <div class="flex-row-center">
            <div class="flex-column-center">
                <label>{{ form_label(form.email) }}</label>
                {{ form_widget(form.email) }}
                {{ form_errors(form.email) }}
            </div>
            <div class="flex-column-center">
                <label>{{ form_label(form.telephone) }}</label>
                {{ form_widget(form.telephone) }}
                {{ form_errors(form.telephone) }}
            </div>
        </div>

        <div class="flex-row-center">
            <div class="flex-column-center">
                <label>{{ form_label(form.message) }}</label>
                {{ form_widget(form.message) }}
                {{ form_errors(form.message) }}
            </div>
        </div>
        <div class="flex-column-center">
            <button type="submit" class="bubblegum-link">
                Valider
            </button>
            {{ form_end(form) }}
        </div>
        <div class="flex-column-center">
            <a class="bubblegum-link" href="{{ path('app_home') }}">Retour Ã  la page d'accueil</a>
        </div>
    </section>
{% endblock %}
