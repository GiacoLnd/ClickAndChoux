{% extends 'base.html.twig' %}

{% block body %}
    <div class="text-center">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>
    <div class="profile-container">
        <h2 class="details-title">Supprimer mon compte</h2>
        <p>Attention, cette action est irréversible.</p>
        <p>Veuillez confirmer votre mot de passe.</p>
        
        {{ form_start(formDelete) }}
            {{ form_row(formDelete.password) }}
            <div class="flex-column-center">
                {{ form_row(formDelete.submit) }}
            </div>
        {{ form_end(formDelete) }}

        <a href="{{ path('app_user_profil') }}" class="bubblegum-link">Retour à votre profil</a>
    </div>
{% endblock %}