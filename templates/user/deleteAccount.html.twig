{% extends 'base.html.twig' %}

{% block body %}
    <section id="delete-account">
        <div class="text-center">
        <h2 class="page-title">Supprimer mon compte</h2>
        <p>Attention, cette action est irréversible.</p>
        <p>Veuillez confirmer votre mot de passe.</p>
            
        {{ form_start(formDelete) }}
            <div class="flex-column-center">
                {{ form_label(formDelete.password) }}
                {{ form_widget(formDelete.password) }}
            </div>
            <div class="text-center">
                <button type="submit" class="no-bg-delete-link" onclick="return confirm('Êtes-vous sûr de vouloir supprimer votre compte ? Cette suppression est définitive')">
                    <i class="fa-solid fa-trash"></i> Supprimer
                </button>
            </div>
        {{ form_end(formDelete) }}
        <a href="{{ path('app_user_profil') }}" class="no-bg-link pt-3">Retour à votre profil</a>
    </section>
{% endblock %}