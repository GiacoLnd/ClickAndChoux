{% extends 'base.html.twig' %}

{% block title %}Mes Commandes{% endblock %}

{% block body %}
    <div class="text-center">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>
    <div class="container">
        <h1 class="login-title text-center p-4">Mes Commandes</h1>

        {% if commandes is empty %}
            <p>Aucune commande passée pour le moment.</p>
        {% else %}
            <table id="commandesTable">
                <thead>
                    <tr>
                        <th>N° Commande</th>
                        <th>Date</th>
                        <th>Montant Total</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for commande in commandes %}
                        <tr>
                            <td>{{ commande.reference }}</td>
                            <td>{{ commande.dateCommande|date('d/m/Y H:i') }}</td>
                            <td>{{ commande.montantTotal }}€</td>
                            <td>
                                {% if commande.statut == 'confirmée' %}
                                    <span class="badge bg-success">Confirmée</span>
                                {% else %}
                                    <span class="badge bg-warning">{{ commande.statut }}</span>
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ path('commande_detail', { id: commande.id }) }}" class="profile-link">
                                    Voir
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}
        <div class="d-flex justify-content-center align-items-center p-3">
            <a href="{{ path('app_user_profil') }}" class="profile-link">Retour au Profil</a>
        </div>
    </div>
{% endblock %}
