{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
    <div class="text-center">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>
    <div class="profile-container">
        <h2 class="details-title">Profil</h2>
        <div class="profile-info">
            <p>Salutations, {{ user.nickName }} !</p>
            <p>Email : {{ user.email }}</p>
         </div>
        <div class="update-container">
            <a href="{{ path('app_update_profile') }}" class="update-button">Modifier mes informations</a>
            <a href="{{ path('app_update_password') }}" class="update-button">Modifier mon mot de passe</a>
        </div>
        <a href="{{ path('favoris_page') }}" class="bubblegum-link">Mes Favoris</a>
        <a href="{{ path('app_user_commandes') }}" class="bubblegum-link">Mes Commandes</a>
        <a href="{{ path('app_profile_delete') }}" class="delete-link">Supprimer mon compte</a>
    </div>
{% endblock %}
 