{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <div class="login-container">
        <h1 class="login-title">Register</h1>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
            <div class="register-mail">
                <div class="form-group">
                    {{ form_label(registrationForm.nickName, 'Pseudo :') }}
                    {{ form_widget(registrationForm.nickName, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(registrationForm.nickName) }}
                </div>
                <div class="form-group">
                    {{ form_label(registrationForm.email, 'Email :') }}
                    {{ form_widget(registrationForm.email, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(registrationForm.email) }}
                </div>
                
                <div class="form-group">
                    {{ form_label(registrationForm.plainPassword, 'Mot de passe :') }}
                    {{ form_widget(registrationForm.plainPassword, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(registrationForm.plainPassword) }}
                </div>
                
                <div class="form-group">
                    {{ form_label(registrationForm.agreeTerms, 'J\'accepte les termes') }}
                    {{ form_widget(registrationForm.agreeTerms) }}
                    {{ form_errors(registrationForm.agreeTerms) }}
                </div>
                

            <button type="submit" class="btn btn-primary">S'inscrire</button>
            </div>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
