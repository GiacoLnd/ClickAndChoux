{% extends 'base.html.twig' %}

{% block title %}Mes Favoris{% endblock %}

{% block body %}
    <div class="text-center">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>
    <div class="favori-list">  
        <h2 class="catalog-title">Mes favoris</h2>
        <div class="choux-grid-container">
            <ul class="choux-grid">
                {% for favori in favoris %}
                <li>
                    <div class="favori-item d-flex flex-column ">
                        <a href="{{ path('produit_detail', {'id': favori.produit.id}) }}"><img src="/img/{{ favori.produit.image }}" alt="{{ favori.produit.nomProduit }}" class="catalog-image"></a>
                        <button class="favori-btn" data-id="{{ favori.produit.id }}"><i class="fa-solid fa-heart"></i></button>
                        <a href="{{ path('produit_detail', {'id': favori.produit.id}) }}"><h2>{{ favori.produit.nomProduit }}</h2></a>
                        <p class="catalog-price">{{ favori.produit.getTTC }}â‚¬</p>      
                    </div>
                </li>
                {% endfor %}
            </ul>
        </div>
        <a class="profile-link" href="{{ path('app_user_profil') }}"> Retour au profil</a>
    </div>
{% endblock %}
