{% extends 'base.html.twig' %}

{% block title %}Mes Favoris{% endblock %}

{% block body %}
    <section id="fav-list">
        <div class="flex-column-center">  
            <h2 class="page-title">Mes favoris</h2>
            <div class="choux-grid-container">
                <ul class="choux-grid">
                    {% for favori in favoris %}
                    <li>
                        <div class="favori-item d-flex flex-column ">
                            <a href="{{ path('produit_detail', {'slug': favori.produit.slug}) }}"><img src="/img/{{ favori.produit.image }}" alt="{{ favori.produit.nomProduit }}" class="catalog-image" loading="lazy"></a>
                            <button class="favori-btn" data-id="{{ favori.produit.id }}"><i class="fa-solid fa-heart"></i></button>
                            <a href="{{ path('produit_detail', {'slug': favori.produit.slug}) }}"><h2>{{ favori.produit.nomProduit }}</h2></a>
                            <p class="catalog-price">{{ favori.produit.getTTC }}â‚¬</p>      
                        </div>
                    </li>
                    {% endfor %}
                </ul>
            </div>
            <a class="bubblegum-link fw-bold" href="{{ path('app_user_profil') }}"> Retour au profil</a>
        </div>
    </section>
{% endblock %}
