{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<section id="login">
    {% if error %}
        <div class="alert alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %} 
    <form method="post" class="flex-column-center">
        <h1 class="page-title">Connectez-vous</h1>
            <label for="username" class="security-text">Email :</label>
                
            <input type="email" value="{{ last_username }}" name="_username" id="username" class="flex-column-center" autocomplete="email" required autofocus >
                
            <label for="password" class="security-text">Mot de passe :</label>
                
            <input type="password" name="_password" id="password" class="flex-column-center" autocomplete="current-password" required>
                
            <div class="remember-me">
                <label for="_remember_me">Se souvenir de moi</label>
                <input type="checkbox" name="_remember_me" id="_remember_me">
            </div>
            <div class="flex-column-center">
                <button type="submit" class="bubblegum-link">Connexion</button>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            </div>   
        <p>Pas encore de compte ? <a href="{{ path('app_register') }}" class="no-bg-link">Inscrivez-vous</a> !</p>     
        <p>Mot de passe oublié ? <a href="{{ path('app_forgot_password_request') }}" class="no-bg-link">Réinitialisez votre mot de passe</a> !</p>     
    </form>
</section>
{% endblock %}
